<div class="row">
  <div class="col-md-10">
    <% if flash[:notice] %>
      <% flash.each do |name, msg| %>
        <div class='alert alert-success alert-dismissible'>
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= notice %>
        </div>
      <% end %>
    <% else %>
      <% flash.each do |name, msg| %>
        <div class='alert alert-info alert-dismissible'>
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= alert %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
