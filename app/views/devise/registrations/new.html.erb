<hr>

<h2 class="text-primary text-center">Crea tu cuenta</h2>

<div class="row">
  <div class="col-sm-7">

    <div class="row space-entre-seccs">
      <div class="col-sm-3"></div>
      <div class="col-sm-9">
        <%= link_to '<i class="fab fa-facebook"></i> Regístrate con tu cuenta de facebook'.html_safe, usuario_facebook_omniauth_authorize_path, class:"btn btn-primary btn-lg" %>
      </div>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <% if session[:omniauth_errors] %>
        <div class="flash"><%= session[:omniauth_errors] %> </div>
      <% end %>

      <div class="row space-entre-seccs">
        <div class="col-sm-3"></div>
        <div class="col-sm-9 text-center">
          <h5><b>o</b></h5>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-9">
          <h5><b>Regístrate llenando los siguientes campos</b></h5>
        </div>
      </div>

      <div class="form-group row">
        <label for="inputEmail3" class="col-sm-3 col-form-label"><b>E-mail</b></label>
        <div class="col-sm-9">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"inputEmail3", placeholder:"E-mail" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="inputNombre" class="col-sm-3 col-form-label"><b>Nombre</b></label>
        <div class="col-sm-9">
          <%= f.text_field :nombre, class:"form-control", id:"inputNombre", placeholder:"Tu nombre o nombre de usuario" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="inputPassword3" class="col-sm-3 col-form-label"><b>Contraseña</b></label>
        <div class="col-sm-9">
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"inputPassword3", placeholder:"6 caracteres mínimo" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="inputPasswordConf3" class="col-sm-3 col-form-label"><b>Confirmar contraseña</b></label>
        <div class="col-sm-9">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"inputPasswordConf3" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="inputImagen" class="col-sm-3 col-form-label"><b>Imagen de perfil</b></label>
        <div class="col-sm-9">
          <%= f.file_field :imagen, class:"form-control", id:"inputImagen" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-3"></div>
        <div class="col-sm-9">
          <%= f.submit "Crear cuenta", class:"btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
  <div class="col-sm-5">
    <%= image_tag 'login.jpeg', style:"width:100%; margin:auto;" %>
  </div>
</div>
