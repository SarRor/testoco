<hr>

<h2 class="text-primary text-center">Editar <%= resource_name.to_s.humanize %></h2>

<div class="row">
  <div class="col-sm-7">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group row">
        <label for="inputEmail3" class="col-sm-3 col-form-label"><b>E-mail</b></label>
        <div class="col-sm-9">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"inputEmail3" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="inputNombre" class="col-sm-3 col-form-label"><b>Nombre</b></label>
        <div class="col-sm-9">
          <%= f.text_field :nombre, class:"form-control", id:"inputNombre", placeholder:"Tu nombre o nombre de usuario" %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group row">
        <label for="inputPassword3" class="col-sm-3 col-form-label"><b>Contraseña nueva</b></label>
        <div class="col-sm-9">
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"inputPassword3", placeholder:"6 caracteres mínimo -si no la cambia, dejar en blanco" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="inputPasswordConf3" class="col-sm-3 col-form-label"><b>Confirmar contraseña</b></label>
        <div class="col-sm-9">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"inputPasswordConf3" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="inputImagen" class="col-sm-3 col-form-label"><b>Imagen de perfil</b></label>
        <div class="col-sm-9">
          <%= f.file_field :imagen, class:"form-control", id:"inputImagen" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="inputPasswordCur3" class="col-sm-3 col-form-label"><b>Contraseña actual</b></label>
        <div class="col-sm-9">
          <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", id:"inputPasswordCur3", placeholder:"Se necesita para realizar los cambios" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-3"></div>
        <div class="col-sm-9">
          <%= f.submit "Actualizar", class:"btn btn-primary btn-lg" %>
        </div>
      </div>

    <% end %>

    <h3>Cancelar mi cuenta</h3>

    <p><%= button_to "Cancelar cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete %></p>

    <%= link_to "Atrás", :back %>
  </div>
  <div class="col-sm-5">
    <%= image_tag 'login.jpeg', style:"width:100%; margin:auto;" %>
  </div>
</div>
