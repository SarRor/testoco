<hr>

<h2 class="text-primary text-center">Inicia Sesión</h2>

<div class="row">
  <div class="col-sm-7">

    <div class="row space-entre-seccs">
      <div class="col-sm-3"></div>
      <div class="col-sm-9">
        <%= link_to '<i class="fab fa-facebook"></i> Ingresa con tu cuenta de facebook'.html_safe, usuario_facebook_omniauth_authorize_path, class:"btn btn-primary btn-lg" %>
      </div>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="row space-entre-seccs">
        <div class="col-sm-3"></div>
        <div class="col-sm-9 text-center">
          <h5><b>o</b></h5>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-9">
          <h5><b>Inicia sesión con los datos que registraste en nuestro sitio</b></h5>
        </div>
      </div>

      <div class="form-group row">
        <label for="inputEmail3" class="col-sm-3 col-form-label"><b>E-mail</b></label>
        <div class="col-sm-9">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"inputEmail3" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputPassword3" class="col-sm-3 col-form-label"><b>Contraseña</b></label>
        <div class="col-sm-9">
          <%= f.password_field :password, class:"form-control", id:"inputPassword3" %>
        </div>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="form-group row">
          <div class="col-sm-3"></div>
          <div class="col-sm-9">
            <div class="form-check">
              <%= f.check_box :remember_me, id:"inputEmailRem3", class:"form-check-input" %>
              <label class="form-check-label" for="inputEmailRem3">Recordarme</label>
            </div>
          </div>
        </div>
      <% end %>
      <div class="form-group row">
        <div class="col-sm-3"></div>
        <div class="col-sm-9">
          <%= f.submit "Ingresar", class:"btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>

  </div>
  <div class="col-sm-5">
    <%= image_tag 'login.jpeg', style:"width:100%; margin:auto;" %>
  </div>
</div>
